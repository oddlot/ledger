<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionOverflowMenuStyle">@style/MenuTextStyle</item>
        <item name="colorPrimary">@color/appTheme</item>
        <item name="android:statusBarColor">@color/appTheme</item>
        <item name="colorAccent">@color/appTheme</item>
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppDarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionOverflowMenuStyle">@style/MenuTextStyle</item>
        <item name="colorPrimary">@color/appTheme</item>
        <item name="android:statusBarColor">@color/appTheme</item>
        <item name="android:background">@color/lightBlack</item>
        <item name="colorAccent">@color/appTheme</item>
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:textColorHint">@color/defaultWhite</item>
    </style>

    <style name="dialog_view_style" parent="">
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">20dp</item>
<!--        <item name="android:fontFamily">@font/varela_round</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:textColor">@color/defaultWhite</item>
    </style>

    <style name="toolbar_theme_dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:background">@color/appTheme</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

</resources>