<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionOverflowMenuStyle">@style/MenuTextStyle</item>
        <item name="colorPrimary">@color/appTheme</item>
        <item name="android:statusBarColor">@color/appTheme</item>
        <item name="android:background">@color/lightBlack</item>
        <item name="colorAccent">@color/appTheme</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="dialog_view_style" parent="">
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/appTheme</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/defaultWhite</item>
        <item name="tabIndicatorColor">@color/defaultWhite</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">20dp</item>
<!--        <item name="android:fontFamily">@font/varela_round</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:background">@color/appTheme</item>
    </style>

    <style name="NavDrawerMenuTheme"></style>

</resources>