<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionOverflowMenuStyle">@style/MenuTextStyle</item>
        <item name="colorPrimary">@color/appTheme</item>
        <item name="android:statusBarColor">@color/appTheme</item>
        <item name="colorAccent">@color/appTheme</item>
        <item name="android:actionMenuTextColor">@color/defaultWhite</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggleStyle</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="dialog_view_style" parent="">
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ClickableStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/appTheme</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/defaultWhite</item>
        <item name="tabIndicatorColor">@color/defaultWhite</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextColor">@color/colorSecondary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item> <!-- Overflow menu item text -->
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/defaultWhite</item>
    </style>

    <style name="ButtonBarButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:tint">@color/defaultWhite</item>
    </style>

    <style name="NavDrawerMenuTheme">
        <item name="itemIconTint">@android:color/darker_gray</item>
        <item name="itemTextColor">?android:attr/textColorPrimary</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="drawerArrowStyle">@style/ButtonBarButtonStyle</item>

    </style>

    <style name="DrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/defaultWhite</item>
=    </style>

</resources>