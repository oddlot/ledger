<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.IndividualTransactionActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_home" />

    <Spinner
            android:id="@+id/paidBySpinner"
            android:backgroundTint="@color/defaultWhite"
            android:layout_height="47dp"
            android:layout_width="183dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/amountPaid"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/amountPaid"
            app:layout_constraintTop_toTopOf="@+id/amountPaid"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/dateLabel"
            style="@style/TextLabelStyle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/datePicker"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:inputType="date"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:paddingLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateLabel"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/amountLabel"
            android:text="Amount"
            style="@style/TextLabelStyle"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp" />

    <EditText
            android:id="@+id/amountPaid"
            android:backgroundTint="@color/defaultWhite"
            android:layout_width="170dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel"
            android:layout_marginTop="12dp" />

    <TextView
            android:id="@+id/descriptionLabel"
            style="@style/TextLabelStyle"
            android:text="Description"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/amountPaid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />

    <EditText
            android:id="@+id/editDescription"
            android:backgroundTint="@color/defaultWhite"
            android:hint="@string/item_description_hint"
            android:inputType="textCapSentences"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0" />

    <TextView
            style="@style/TextLabelStyle"
            android:layout_marginStart="124dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="12dp"
            android:text="Who Is Owed"
            app:layout_constraintBottom_toTopOf="@+id/paidBySpinner"
            app:layout_constraintStart_toEndOf="@id/amountLabel"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>