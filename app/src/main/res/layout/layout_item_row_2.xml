<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/whoPaid"
            app:layout_constraintBaseline_toBaselineOf="@id/itemDateView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingBottom="5dp"
            tools:text="Cecilia paid"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/totalAmount"
            app:layout_constraintStart_toEndOf="@+id/itemDateView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_wrapHeight="51"
            tools:layout_conversion_wrapWidth="163" />

    <TextView
            android:id="@+id/itemDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="08/01"
            android:textSize="14sp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_conversion_wrapWidth="240"
            tools:layout_conversion_wrapHeight="56"/>

    <TextView
            android:id="@+id/itemDescriptionInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="255dp"
            android:layout_marginEnd="80dp"
            android:paddingStart="14dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:text="Test item for a test tab for a test example. Lorem Ipsum blah blahblahblah jksdhkah"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/totalAmount"
            app:layout_constraintStart_toStartOf="@+id/whoPaid"
            app:layout_constraintTop_toBottomOf="@+id/whoPaid"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_conversion_wrapHeight="96"
            tools:layout_conversion_wrapWidth="585"/>

    <TextView
            android:id="@+id/totalAmount"
            app:layout_constraintBaseline_toBaselineOf="@id/itemDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|start|top"
            android:paddingStart="4dp"
            android:paddingEnd="12dp"
            tools:text="0.00"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_wrapHeight="147"
            tools:layout_conversion_wrapWidth="174" />

    <TextView
            android:id="@+id/dynamicTabBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingStart="4dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemDescriptionInput"
            tools:text="(12010)" />

</androidx.constraintlayout.widget.ConstraintLayout>







