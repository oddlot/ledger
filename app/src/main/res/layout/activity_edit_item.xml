<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditItemActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_home" />

    <Spinner
            android:id="@+id/paidBySpinner"
            android:layout_height="47dp"
            android:layout_width="183dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/totalAmount"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/totalAmount"
            app:layout_constraintTop_toTopOf="@+id/totalAmount"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/itemDateLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/editItemDate"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:inputType="date"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:focusable="true"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/itemDateLabel"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/itemAmountLabel"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/editItemDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"/>

    <EditText
            android:id="@+id/totalAmount"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/itemAmountLabel"
            android:layout_marginTop="12dp"
            android:text="123" />

    <TextView
            android:id="@+id/itemDescriptionLabel"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/totalAmount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />

    <TextView
            android:id="@+id/itemTypeLabel"
            android:layout_width="183dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:text="Type"
            app:layout_constraintBottom_toTopOf="@+id/paidBySpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editItemDate"
            app:layout_constraintVertical_bias="0.0" />

    <Button
            android:id="@+id/itemEditBtn"
            android:layout_width="198dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorGreen"
            android:text="UPDATE"
            android:textColor="@color/defaultWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionInput" />

    <EditText
            android:id="@+id/itemDescriptionInput"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp" android:inputType="textCapSentences"
            android:hint="@string/item_description_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>