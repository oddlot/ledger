<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditItemActivity">

    <TextView
            android:id="@+id/txnTypeLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="96dp"
            android:text="Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_home" />

    <Spinner
            android:id="@+id/paidBySpinner"
            android:layout_height="47dp"
            android:layout_width="183dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/amountPaid"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/amountPaid"
            app:layout_constraintTop_toTopOf="@+id/amountPaid"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/itemDateLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/datePicker"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:inputType="date"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:paddingLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemDateLabel"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/txnTypeSwitch"
            app:layout_constraintTop_toTopOf="@id/txnTypeSwitch"
            android:paddingTop="4dp"
            android:text="Paid"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/txnTypeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemDateLabel"
            app:layout_constraintTop_toTopOf="@id/datePicker" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txnTypeSwitch"
            app:layout_constraintTop_toTopOf="@id/txnTypeSwitch"
            android:paddingTop="4dp"
            android:text="Owes"/>

    <TextView
            android:id="@+id/amountLabel"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="12dp" />

    <EditText
            android:id="@+id/amountPaid"
            android:layout_width="170dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel"
            android:layout_marginTop="12dp" />

    <TextView
            android:id="@+id/labelDescription"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/amountPaid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />

    <EditText
            android:id="@+id/editDescription"
            android:hint="@string/item_description_hint"
            android:inputType="textCapSentences"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0" />

    <TextView
            android:id="@+id/paidBy"
            android:text="Paid By"
            android:layout_width="186dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/paidBySpinner"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
            android:id="@+id/itemSubmitBtn"
            android:layout_width="198dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            android:background="#51B46D"
            android:text="Submit"
            android:textColor="@color/defaultWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>